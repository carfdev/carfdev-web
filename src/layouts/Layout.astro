---
import { Font } from "astro:assets";
import { ClientRouter } from "astro:transitions";
import { PUBLIC_WEB_URL } from "astro:env/client";

import {
  getLangFromUrl,
  getUrlWithoutLang,
  useTranslatedPath,
  useTranslations,
  indexUi,
} from "@/i18n/index-ui";
import { CustomNavbar } from "@/components/customNavbar";

import "@/styles/global.css";
import Footer from "@/components/Footer.astro";

const lang = getLangFromUrl(Astro.url);
const currentUrl = getUrlWithoutLang(Astro.url);
const t = useTranslations(lang);
const useTranslated = useTranslatedPath(lang);

const navItems = t("nav").links.slice() as {
  text: string;
  href: string;
}[];

interface Props {
  title?: string;
  description?: string;
  image?: string;
  articleDate?: string;
  type?: string;
}

const {
  title,
  description,
  image = "/screenshot-desktop.png",
  articleDate,
  type = "website",
} = Astro.props;

const canonicalURL = new URL(PUBLIC_WEB_URL + useTranslated("") + currentUrl);
const socialImageURL = new URL(PUBLIC_WEB_URL + image);
const siteName = "Carfdev";
---

<!doctype html>
<html lang={lang} class="motion-safe:scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description ?? t("meta").description} />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Carfdev" />
    <link rel="manifest" href={useTranslated("/site.webmanifest")} />
    <Font cssVariable="--font-switzer" preload />
    <Font cssVariable="--font-plein" preload />
    <ClientRouter />
    <title>{title ?? t("meta").title}</title>
    <link rel="canonical" href={canonicalURL} />
    {
      Object.keys(indexUi).map((l) => (
        <link
          rel="alternate"
          hreflang={l}
          href={new URL(PUBLIC_WEB_URL + useTranslated(currentUrl, l as any))}
        />
      ))
    }
    <meta name="robots" content="index, follow" />
    <meta property="og:title" content={title ?? t("meta").title} />
    <meta
      property="og:description"
      content={description ?? t("meta").description}
    />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:type" content={type} />
    <meta property="og:locale" content={lang} />
    <meta property="og:image" content={socialImageURL} />
    {
      articleDate && (
        <meta property="article:published_time" content={articleDate} />
      )
    }

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title ?? t("meta").title} />
    <meta
      name="twitter:description"
      content={description ?? t("meta").description}
    />
    <meta name="twitter:image" content={socialImageURL} />
  </head>
  <body
    class="bg-background relative grid min-h-screen grid-rows-[auto_1fr_auto]"
  >
    <a
      href="#main-content"
      class="focus:bg-primary-foreground focus:text-primary sr-only -translate-x-1/2 focus:not-sr-only focus:absolute focus:top-20 focus:left-1/2 focus:p-2"
    >
      Skip to main content
    </a>
    <CustomNavbar
      transition:persist
      navItems={navItems}
      client:visible
      lang={lang}
      currentUrl={currentUrl}
    />
    <main id="main-content"><slot /></main>
    <Footer />
  </body>
</html>

<script is:inline>
  const theme = localStorage.theme;
  const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
  if (theme === "dark" || (!theme && prefersDark)) {
    document.documentElement.classList.add("dark");
  } else {
    document.documentElement.classList.remove("dark");
  }

  document.addEventListener("astro:before-swap", (event) => {
    const theme = localStorage.theme;
    const prefersDark = window.matchMedia(
      "(prefers-color-scheme: dark)",
    ).matches;
    if (theme === "dark" || (!theme && prefersDark)) {
      event.newDocument.documentElement.classList.add("dark");
    } else {
      event.newDocument.documentElement.classList.remove("dark");
    }

    const fontsPreload = event.newDocument.querySelectorAll(
      'link[rel="preload"][as="font"]',
    );
    if (fontsPreload) {
      fontsPreload.forEach((font) => font.remove());
    }
  });
</script>

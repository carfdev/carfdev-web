---
import { Font } from "astro:assets";
import { ClientRouter } from "astro:transitions";

import {
  getLangFromUrl,
  getUrlWithoutLang,
  useTranslations,
} from "@/i18n/index-ui";
import { CustomNavbar } from "@/components/customNavbar";

import "@/styles/global.css";
import Footer from "@/components/Footer.astro";

const lang = getLangFromUrl(Astro.url);
const currentUrl = getUrlWithoutLang(Astro.url);
const t = useTranslations(lang);

const navItems = t("nav").links.slice() as {
  text: string;
  href: string;
}[];

interface Props {
  title?: string;
  description?: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang={lang} class="motion-safe:scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description ?? t("meta").description} />
    <link rel="icon" type="image/png" href="/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Carfdev" />
    <link rel="manifest" href="/site.webmanifest" />
    <Font cssVariable="--font-switzer" preload />
    <Font cssVariable="--font-plein" preload />
    <ClientRouter />
    <title>{title ?? t("meta").title}</title>
  </head>
  <body
    class="bg-background relative grid min-h-screen grid-rows-[auto_1fr_auto]"
  >
    <a
      href="#main-content"
      class="focus:bg-primary-foreground focus:text-primary sr-only -translate-x-1/2 focus:not-sr-only focus:absolute focus:top-20 focus:left-1/2 focus:p-2"
    >
      Skip to main content
    </a>
    <CustomNavbar
      transition:persist
      navItems={navItems}
      client:visible
      lang={lang}
      currentUrl={currentUrl}
    />
    <main id="main-content"><slot /></main>
    <Footer />
  </body>
</html>

<script is:inline>
  const theme = localStorage.theme;
  const prefersDark = window.matchMedia("(prefers-color-scheme: dark)").matches;
  if (theme === "dark" || (!theme && prefersDark)) {
    document.documentElement.classList.add("dark");
  } else {
    document.documentElement.classList.remove("dark");
  }

  document.addEventListener("astro:before-swap", (event) => {
    const theme = localStorage.theme;
    const prefersDark = window.matchMedia(
      "(prefers-color-scheme: dark)",
    ).matches;
    if (theme === "dark" || (!theme && prefersDark)) {
      event.newDocument.documentElement.classList.add("dark");
    } else {
      event.newDocument.documentElement.classList.remove("dark");
    }

    const fontsPreload = event.newDocument.querySelectorAll(
      'link[rel="preload"][as="font"]',
    );
    if (fontsPreload) {
      fontsPreload.forEach((font) => font.remove());
    }
  });
</script>

---
import { Image } from "astro:assets";
import {
  useTranslations,
  getLangFromUrl,
  type projectUi,
} from "@/i18n/project-ui";

interface Props {
  projectId: keyof (typeof projectUi)[typeof lang];
}
const { projectId }: Props = Astro.props;

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const hero = t(projectId).hero;
---

<section id="project-header" class="bg-background py-12">
  <div class="container mx-auto grid max-w-4xl gap-8 px-6 text-center">
    <h1 class="text-balance">{hero.title}</h1>

    <Image
      transition:name={`image/project/${projectId}`}
      class="bg-input h-96 rounded-lg object-cover object-top"
      src={hero.image}
      alt={hero.imageAlt}
      loading="eager"
    />
  </div>
</section>

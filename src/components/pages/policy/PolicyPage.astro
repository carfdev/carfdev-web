---
import Layout from "@/layouts/Layout.astro";
import { Link } from "@/components/ui/link";
import { ArrowLeft } from "lucide-react";
import {
  getLangFromUrl,
  useTranslations,
  useTranslatedPath,
} from "@/i18n/policy-ui";
import Hero from "./sections/Hero.astro";
import Introduction from "./sections/Introduction.astro";
import DataController from "./sections/DataController.astro";
import Collect from "./sections/Collect.astro";
import Information from "./sections/Information.astro";
import Processing from "./sections/Processing.astro";
import DataStorage from "./sections/DataStorage.astro";
import ThirdParty from "./sections/ThirdParty.astro";
import Cookies from "./sections/Cookies.astro";
import Rights from "./sections/Rights.astro";
import DataTransfer from "./sections/DataTransfer.astro";
import Children from "./sections/Children.astro";
import Changes from "./sections/Changes.astro";
import Contact from "./sections/Contact.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const useTranslated = useTranslatedPath(lang);
---

<Layout title={t("meta").title} description={t("meta").description}>
  <section class="bg-background px-6 py-20 lg:px-12">
    <div class="mx-auto max-w-4xl">
      <Hero />

      <article class="space-y-8">
        <Introduction />
        <DataController />
        <Collect />
        <Information />
        <Processing />
        <DataStorage />
        <ThirdParty />
        <Cookies />
        <Rights />
        <DataTransfer />
        <Children />
        <Changes />
        <Contact />

        <div class="mt-12 flex justify-center">
          <Link href={useTranslated("")} size="lg">
            <ArrowLeft />
            {t("btn").text}
          </Link>
        </div>
      </article>
    </div>
  </section>
</Layout>

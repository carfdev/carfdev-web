---
import { getLangFromUrl, useTranslations } from "@/i18n/policy-ui";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const section = t("sections")["9_rights"];
---

<section>
  <h2>{section.title}</h2>
  <p class="mb-2">
    {section.subtitle}
  </p>

  <div class="bg-secondary not-prose space-y-4 rounded-lg p-6">
    {
      section.rights.map((item) => (
        <div>
          <h4>{item.label}</h4>
          <p class="text-muted-foreground text-sm">{item.value}</p>
        </div>
      ))
    }
  </div>

  <p class="mt-6">
    {section.contact.label}
    <a href="mailto:info@carf.dev" class="text-primary hover:underline">
      info@carf.dev
    </a>. {section.contact.value}
  </p>
</section>

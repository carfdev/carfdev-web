---
import { LucideIcon, type LucideIconName } from "@/components/ui/lucide-icon";

interface Props {
  title: string;
  description: string;
  icon: LucideIconName;
}

const { title, description, icon }: Props = Astro.props;
---

<div class="text-center">
  <div
    class="text-primary bg-input mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full"
    aria-hidden="true"
  >
    <LucideIcon name={icon} />
  </div>
  <h3>
    {title}
  </h3>
  <p class="text-muted-foreground leading-relaxed">
    {description}
  </p>
</div>

---
interface Props {
  step: number;
  title: string;
  description: string;
}

const { step, title, description }: Props = Astro.props;
---

<div class="relative text-center">
  <div
    class="mx-auto mb-6 flex h-16 w-16 items-center justify-center rounded-full bg-neutral-500 text-xl text-white"
  >
    {step}
  </div>
  <h3>{title}</h3>
  <p class="text-muted-foreground leading-relaxed">
    {description}
  </p>
</div>

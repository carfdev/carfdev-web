---
import { TablerIcon, type TablerIconName } from "@/components/ui/tabler-icon";

interface Props {
  name: string;
  description: string;
  icon: TablerIconName;
}

const { name, description, icon } = Astro.props;
---

<div
  class="border-border rounded-xl border p-6 text-center transition-shadow hover:shadow-lg"
>
  <div
    class="bg-secondary mx-auto mb-4 flex h-16 w-16 items-center justify-center rounded-full"
  >
    <TablerIcon name={icon} />
  </div>
  <h3>{name}</h3>
  <p class="text-muted-foreground text-sm">
    {description}
  </p>
</div>
